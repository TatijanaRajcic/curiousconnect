                    <!-- ------------------------ CALL TO ACTION ------------------------ -->
                    <section class="slice sct-color-4" id="contact">
                        <div class="container">
                            <div class="section-title section-title--style-1 text-center mb-2">
                                <h3 class="section-title-inner text-normal transformation" style="font-family: Raleway; color:white">
                                    Connecte-moi !
                                </h3>
                                <span class="section-title-delimiter clearfix d-none"></span>
                            </div>

                            <span class="clearfix"></span>

                            <div class="fluid-paragraph fluid-paragraph-sm  strong-300 text-center" style="color:#b7c1c8">
                                Toujours curieux ? Bravo, tu y es presque ! Viens nous rejoindre.
                            </div>

                            <span class="space-xs-xl"></span>

                            <div class="row justify-content-center">
                                <div class="col-lg-6">
                                    <%= form_for @user, url: {action: "create"} do |f| %>
                                    <!-- Contact form -->
                                    <form id="form_contact" data-action="../../php/send-email.php" class="form-default" role="form">
                                        <div class="form-group has-feedback">
                                            <div type="text" name="name">
                                                <%= f.text_field :name, class: "form-control form-control-xl", placeholder:"Nom" %>
                                            </div>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group has-feedback">
                                            <div type="email" name="email">
                                                <%= f.text_field :email, class: "form-control form-control-xl", placeholder:"Email" %>
                                            </div>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group has-feedback">
                                            <div type="text" name="type">
                                                <%= f.select(:user_type, ["Curieux et...","Utilisateur","Partenaire"], {}, { :class => 'form-control'})  %>
                                            </div>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="form-group has-feedback">
                                            <%= f.text_area :message, class: "form-control no-resize", rows: "5", placeholder: "Message..." %>
                                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                            <div class="help-block with-errors"></div>
                                        </div>

                                        <div class="">
                                            <%= f.submit "Envoie !", class: "btn btn-block btn-styled btn-lg btn-base-2 btn-shadow strong-600 mt-4"%>
                                        </div>

                                    </form>
                                    <% end %>

                                </div>
                            </div>
                        </div>
                    </section>
